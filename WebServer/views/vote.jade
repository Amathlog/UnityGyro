block content
    h1#voteText Vote

    style.

        #voteText{
            text-align: center;
            margin-top: 45%;
            font-size: 30pt;
            color: #ffffff
        }
        #voteButtons{
            position: absolute;
            display: grid;
            margin-top:28%;
            width:100%;
            height:45%;
            grid-template-columns: 50% 50%;
            grid-template-rows: 50% 50%;
        }
        button{
            margin: 12%
        }
        .choice1{
            grid-column: 1; grid-row: 1;
        }
        .choice2{
            grid-column: 2; grid-row: 1;
        }
        .choice3{
            grid-column: 1; grid-row: 2;
        }
        .choice4{
            grid-column: 2; grid-row: 2;
        }

    div#voteButtons
        button#choice1 Choice 1
        button#choice2 Choice 2
        button#choice3 Choice 3
        button#choice4 Choice 4

    script.
        $('#background').css("background-image", "url('/images/vote_screen.png')")